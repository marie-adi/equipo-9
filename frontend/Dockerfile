# Usa una imagen de Node.js para construir la aplicaci贸n
FROM node:14 as build

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos de tu aplicaci贸n
COPY package*.json ./
RUN npm install
COPY . .

# Construye la aplicaci贸n
RUN npm run build

# Usa Nginx para servir la aplicaci贸n
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

# Expone el puerto 80
EXPOSE 80